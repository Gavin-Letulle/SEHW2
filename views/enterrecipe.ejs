<%- include('./partials/header') %>
<body>
    <h1>Enter new recipe information:</h1>
    <form action="./add-recipe" method="post">
        label for="recipe_name">Recipe Name:</label>
        <input type="text" name="recipe_name" id="recipe_name" required><br>
        <label for="protein_type">Protein Type:</label>
        <select name="protein_type" id="protein_type" required>
            <option value="">Select Protein</option>
            <option value="Chicken">Chicken</option>
            <option value="Beef">Beef</option>
            <option value="Tofu">Tofu</option>
            <option value="Grains">Grains</option>
            <option value="Other">Other</option>
        </select><br>

        <label for="cooking_time">Cooking Time (minutes):</label>
        <input type="number" name="cooking_time" id="cooking_time" min="1" required><br>

        <label for="instructions">Instructions:</label><br>
        <textarea name="instructions" id="instructions" rows="5" cols="40" required></textarea><br>

        <h3>Select Ingredients:</h3>
        <% ingredients.forEach(ingredient => { %>
            <div>
                <input type="checkbox" name="selectedIngredients" value="<%= ingredient.ingredient_id %>">
                <%= ingredient.ingredient_name %> 
                - Quantity: <input type="text" name="quantities" placeholder="e.g., 2 cups">
            </div>
        <% }); %>

        <input type="submit" value="Add Recipe">
    </form>
</body>
</html>